<%= render "/shared/navbar" %>

<div class="container">
  <%= render "/shared/errors" %>
</div>

<div class="signup-background">
  <div class="container">
    <div class="jumbotron logintron">
      <div class="jumbotron-container">

      <h2 class="text-center">Sign Up</h2>
      <form action="<%= users_url %>" method="post">

        <%= auth_token %>

        <div class="form-group">
          <span class="login-icon fa fa-envelope"></span>
          <input type="email"
                 name="user[email]"
                 value="<%= @user.email %>"
                 id="users-email"
                 class="form-control new-user login-field"
                 placeholder="abc123@example.com">
        </div>

        <div class="form-group">
          <span class="login-icon fa fa-user"></span>
          <input type="text"
                 name="user[username]"
                 value="<%= @user.username %>"
                 class="form-control new-user login-field"
                 id="users-username"
                 placeholder="Username">
        </div>

        <div class="form-group">
          <span class="login-icon fa fa-key"></span>
          <input type="password"
                 name="user[password]"
                 id="users-password"
                 class="form-control new-user login-field"
                 placeholder="Password">
        </div>


       <p class="col-md-12">
         <div class="col-md-6 text-left">
           <input class="btn btn-primary login-btn"
                  type="submit" value="Register">
         </div>
         <div class="col-md-6 text-right">
           <a class="btn btn-primary login-btn"
              href="/session/new">
                Log In
          </a>
         </div>
       </p>

      </form>
      </div>
    </div>
  </div>
</div>
