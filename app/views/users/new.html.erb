<%= render "/shared/navbar" %>

<div class="container">
  <%= render "/shared/errors" %>
</div>

<div class="signup-background">
  <div class="container">
    <div class="jumbotron">
      <div class="jumbotron-container">

      <h2 class="jumbotron-header text-center">Sign Up</h2>
      <form action="<%= users_url %>" method="post">

        <%= auth_token %>

        <div class="form-group">
          <label for="users-email">Email: </label>
          <input type="email"
                 name="user[email]"
                 value="<%= @user.email %>"
                 id="users-email"
                 class="form-control new-user"
                 placeholder="abc123@example.com">
        </div>

        <div class="form-group">
          <label for="users-username">Username: </label>

          <input type="text"
                 name="user[username]"
                 value="<%= @user.username %>"
                 class="form-control new-user"
                 id="users-username"
                 placeholder="Username">
        </div>

        <div class="form-group">
          <label for="users-password">Password: </label>
          <input type="password"
                 name="user[password]"
                 id="users-password"
                 class="form-control new-user"
                 placeholder="Password">
        </div>


       <p>
         <input class="btn btn-primary" type="submit" value="Register">
       </p>

      </form>
      </div>
    </div>
  </div>
</div>
