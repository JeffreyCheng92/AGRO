<div class="container">
  <div class="jumbotron">
    <div class="jumbotron-container">

    <h1 class="jumbotron-header">Sign Up Now</h1>
    <form action="<%= users_url %>" method="post">

      <%= auth_token %>

      <label for="users-email">Email Address: </label>
      <input type="text"
             name="user[email]"
             value="<%= @user.email %>"
             id="users-email">
      <br>

      <label for="users-username">Username: </label>
      <input type="text"
             name="user[username]"
             value="<%= @user.username %>"
             id="users-username">
      <br>

      <label for="users-password">Password: </label>
      <input type="password"
             name="user[password]"
             id="users-password">
     <br>

     <p>
       <input class="btn btn-primary btn-lg" type="submit" value="Register">
       <%= link_to "Proceed as Guest", root_url %>
     </p>

    </form>
    </div>
  </div>
</div>

