<div class="panel panel-default profile-page">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4 sidebar">
        <a class="image-link">
          <!-- here goes the image -->
        </a>
        <div class="table-responsive">
          <table class='table'>
            <br>
            <tr>
              <td><strong>Username: </strong></td>
              <td> <%= user.escape("username") %> </td>
            </tr>
            <tr>
              <td><strong>Location: </strong></td>
              <td><%= user.escape("location") %></td>
            </tr>
            <tr>
              <td><strong>Total Reviews: </strong></td>
              <td><%= user.escape('reviews') %></td>
            </tr>
          </table>
        </div>
      </div>

      <div class="col-md-8">
        <h2 class='text-center'>
          <%= user.escape('username').toUpperCase() + "'S"%> PROFILE
        </h2>
        <div class="description">
          <p>
            <h3>About Me:</h3>
          </p>
          <p>
            <%= user.escape("bio") %>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>
