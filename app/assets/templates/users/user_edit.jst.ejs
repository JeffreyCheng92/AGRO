<h1 class="text-center">Profile Edit</h1>

<div class="panel panel-default profile-page">
  <div class="panel-body">
    <form class="user-edit-form" action="/api/users/<%= user.id %>" method="post">

      <div class="form-group">
        <label for="users-loc">Location: </label>
        <input type="text"
               name="user[location]"
               value="<%= user.escape("location") %>"
               id="users-loc"
               class="form-control">
      </div>

      <div class="form-group">
        <label for="users-bio">Biography: </label>
        <textarea class="form-control"
                  name="user[bio]"
                  rows="8"
                  cols="40"><%= user.escape("bio") %></textarea>
      </div>

      <div class="form-group image">
        <label for="users-avatar">Avatar: (Images will be transformed to 350x400) </label>
        <span class="help-inline"></span>
        <button class="upload-button btn btn-default">Upload New Image</button>
      </div>

      <input class="btn btn-primary btn-default" type="submit" value="Update">

    </form>
  </div>
</div>
