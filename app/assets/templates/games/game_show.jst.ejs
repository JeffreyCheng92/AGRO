<div class="text-center">
  <h1 class="center"> <%= game.escape('title') %> </h1>
</div>

<div class="panel panel-default profile-page">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <a class="image-link">
          <!-- here goes the image -->
        </a>
        <div class="table-responsive">
          <table class='table'>
            <tr>
              <td><strong>Title: </strong></td>
              <td> <%= game.escape('title') %> </td>
            </tr>
            <tr>
              <td><strong>Developer: </strong></td>
              <td> <%= game.escape('developer') %> </td>
            </tr>
            <tr>
              <td><strong>Release Date: </strong></td>
              <td> <%= game.escape('release_date') %> </td>
            </tr>
            <tr>
              <td><strong>ESRB Rating: </strong></td>
              <td> <%= game.escape('rating') %> </td>
            </tr>
          </table>
        </div>
        <% if (id === game.get('author_id')) { %>
          <div><button class="delete-button">Delete Game</button></div>
          <div><a href="/#/games/<%= game.id %>/edit">Edit Game</a></div>
        <% } %>
      </div>
      <div class="col-md-8">
        <h3 class='text-center'>Description/Storyline</h3>
        <div> <%= game.escape('description') %></div>
      </div>
    </div>
  </div>
</div>
