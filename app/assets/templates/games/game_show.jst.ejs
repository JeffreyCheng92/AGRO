<div>
  <h3 class="text-center"> <%= game.escape('title') %> </h3>

  <h5> <button class="btn btn-default back fa fa-arrow-left"></button>
    Tags: <% game.tags().each(function(tag) { %>
      <%= tag.escape('label') + " " %>
    <% }) %>
  </h5>
</div>

<div class="panel panel-default profile-page">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4 sidebar">
        <a class="image-link">
          <!-- here goes the image -->
        </a>
        <div class="table-responsive">
          <table class='table'>
            <tr>
              <td><strong>Title: </strong></td>
              <td> <%= game.escape('title') %> </td>
            </tr>
            <tr>
              <td><strong>Developer: </strong></td>
              <td> <%= game.escape('developer') %> </td>
            </tr>
            <tr>
              <td><strong>Release Date: </strong></td>
              <td> <%= game.escape('release_date') %> </td>
            </tr>
            <tr>
              <td><strong>ESRB Rating: </strong></td>
              <td> <%= game.escape('rating') %> </td>
            </tr>
            <tr>
              <% if (id === game.get('author_id')) { %>
                <td><button class="delete-button btn btn-default">Delete Game</button></td>
                <td><a class="edit-link"
                       href="/#/games/<%= game.id %>/edit">Edit Game</a></td>
              <% } %>
            </tr>
            <tr>
              <td><strong>Platform(s): </strong></td>
              <td></td>
            </tr>


          </table>
          <ul class="platform-list">
            <% this.model.consoles().each( function(consoul) { %>
              <li><%= consoul.escape('name') %></li>
            <% }) %>
          </ul>
        </div>

      </div>
      <div class="col-md-8">
        <h3 class="text-center">
          <div class="game-avg-rating"
               data-score="<%= game.get('average_rating') %>">
           </div>
        </h3>
        <h3 class='text-center'>Description/Storyline</h3>
        <div> <%= game.escape('description') %></div>
      </div>
    </div>

    <div class="review-form">
      <!-- review form goes here -->
    </div>
    <br>
    <div class="review-list">
      <!-- review items go here -->
    </div>
  </div>
</div>
