<% ratings = ["", "eC", "E", "10+", "T", "M", "A", "RP"] %>
<% desc = ["", "Early Childhood", "Everyone", "Ages 10+",
           "Teen", "Mature", "Adults", "Rating Pending"] %>

<h3><%= header %></h3>

<form class="game-form">

  <div class="form-group control-group title">
    <label for="game-title">Title:</label>
    <input type="text"
           name="game[title]"
           value="<%= game.escape("title") %>"
           id="game-title"
           class="form-control">
    <span class="help-inline"></span>
  </div>

  <div class="form-group control-group developer">
    <label for="game-developer">Developer:</label>
    <input type="text"
           name="game[developer]"
           value="<%= game.escape('developer')%>"
           id="game-developer"
           class="form-control">
    <span class="help-inline"></span>
  </div>

  <div class="form-group control-group release_date">
    <label for="game-release-date">Release Date:</label>
    <input type="text"
           name="game[release_date]"
           value="<%= game.escape('release_date') %>"
           id="game-release-date"
           class="form-control">
    <span class="help-inline"></span>
  </div>

  <div class="form-group control-group rating">
    <label for="game-rating"> ESRB Rating: </label>
    <select name="game[rating]">
      <% for(var i = 0; i < ratings.length; i++) { %>
        <% if (i === 0) { %>
          <option selected disabled hidden value=""></option>
        <% } else { %>
          <option value="<%= ratings[i] %>"
                  <%= (game.get('rating') == ratings[i]) ? 'selected' : '' %> >   <%= desc[i] %>
          </option>
        <% } %>
      <% } %>
    </select>
    <span class="help-inline"></span>
  </div>

  <div class="form-group control-group game-consoles clearfix">
    <input type="hidden" name="game[console_ids][]" value="">
    <p>
      <label>Consoles: (Check all that apply)</label>
    </p>

    <div class="col-md-3 first-column">
    </div>

    <div class="col-md-3 second-column">
    </div>

    <div class="col-md-3 third-column">
    </div>

    <div class="col-md-3 fourth-column">
    </div>

  </div>


  <div class="form-group control-group tags">
    <label for="game-tags"> Tags: </label>
    <input type="text"
           class="tokenize form-control"
           name="game[tags]"
           value="">
  </div>

  <div class="form-group control-group description">
    <label for="game-description"> Description/Story: </label>
    <textarea name="game[description]"
              id="game-description"
              class="form-control"
              rows="8"
              cols="40"><%= game.escape("description") %></textarea>
    <span class="help-inline"></span>
  </div>

  <div class="form-group image">
    <label for="game-cover">Cover Art: (Images will be transformed to 350x400) </label>
    <span class="help-inline-image"></span>
    <button class="upload-button btn btn-default">Upload New Image</button>
  </div>



  <input type="submit" class="btn btn-default" value="<%= button_name %>">
</form>
